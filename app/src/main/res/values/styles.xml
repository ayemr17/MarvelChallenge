<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutGuidelines" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabPaddingTop">20dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabTextPersonaje</item>
    </style>

    <style name="ItemTabPersonaje" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabPaddingTop">20dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextAppearance">@style/TabTextPersonaje</item>

    </style>

    <style name="TabTextPersonaje" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#262626</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="style_text_list_14" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#262626</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="style_text_list_24" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#262626</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>