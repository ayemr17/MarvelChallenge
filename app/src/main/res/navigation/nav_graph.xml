<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment"
    tools:ignore="UnusedNavigation">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.empresa.myapplication.marvelapp.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <fragment
        android:id="@+id/detallePersonajeFragment"
        android:name="com.empresa.myapplication.marvelapp._view.personajes.DetallePersonajeFragment"
        android:label="fragment_detalle_personaje"
        tools:layout="@layout/fragment_detalle_personaje" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.empresa.myapplication.marvelapp._view.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.empresa.myapplication.marvelapp._view.home.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_detallePersonajeFragment"
            app:destination="@id/detallePersonajeFragment"
            app:popUpTo="@id/detallePersonajeFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.empresa.myapplication.marvelapp._view.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_ViewPagerFrafment"
        app:destination="@id/viewPagerFragment" />
    <action
        android:id="@+id/action_global_LoginFrafment"
        app:destination="@id/loginFragment" />
</navigation>